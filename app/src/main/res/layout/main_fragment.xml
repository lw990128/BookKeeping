<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.92"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:padding="8dp"
        android:background="#ffeeeeee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="bottom">

        <com.lw.bookkeeping.View.TabView
            android:id="@+id/tab_home"
            app:tabImage="@mipmap/weixin_normal"
            app:tabSelectedImage="@mipmap/weixin_pressed"
            app:tabColor="#FF45C01A"
            app:tabTitle="首页"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.lw.bookkeeping.View.TabView
            android:id="@+id/tab_detail"
            app:tabImage="@mipmap/find_normal"
            app:tabSelectedImage="@mipmap/find_pressed"
            app:tabColor="#FF45C01A"
            app:tabTitle="明细"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.lw.bookkeeping.View.TabView
            android:id="@+id/tab_chart"
            app:tabImage="@mipmap/profile_normal"
            app:tabSelectedImage="@mipmap/profile_pressed"
            app:tabColor="#FF45C01A"
            app:tabTitle="图表"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.lw.bookkeeping.View.TabView
            android:id="@+id/tab_mine"
            app:tabImage="@mipmap/contact_list_normal"
            app:tabSelectedImage="@mipmap/contact_list_pressed"
            app:tabColor="#FF45C01A"
            app:tabTitle="我的"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>